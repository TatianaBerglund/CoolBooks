<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Cool Books</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cool Books", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Hem", "Index", "Home", null, new { @class = "active" })</li>

                    <li>
                    <li>@Html.ActionLink("About us", "About", "Home", new { }, null)</li>
                    <li>@Html.ActionLink("Contact us", "Contact", "Home", new { }, null)</li>
                    @if (Request.IsAuthenticated)
                    {
                    <li>@Html.ActionLink("Books", "Index", "Books", new { }, null)</li>
                    <li>@Html.ActionLink("Reviews", "Index", "Reviews", new { }, null)</li>
                    <li>@Html.ActionLink("Authors", "Index", "Authors", new { }, null)</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Genre <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            
                       
                            @{
                                
                                
                                Html.RenderPartial("~/Views/Genres/GenreList.cshtml");
                            }
                            
                        </ul>
                    </li>
                                }
                </ul>
                <form class="navbar-form navbar-left" action="/action_page.php">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Book Title" name="search">
                    </div>
                    <button type="submit" class="btn btn-default">Search</button>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>

    <div id="wrap">
        <div class="center_content">
            <div class="left_content">
                @RenderBody()
            </div>
            <!--end of left content-->
            <div class="right_content">


            </div>
            <!--end of right content-->
            <div class="clear"></div>
        </div>
        <!--end of center content-->
        <div class="footer">
            <div class="left_footer">
                <p>&copy; @DateTime.Now.Year - Cool Books</p>
            </div>
            <div class="right_footer">
                @Html.ActionLink("Hem", "Index", "Home", new { }, null) @Html.ActionLink("About us", "About", "Home", new { }, null)
                @Html.ActionLink("Contact us", "Contact", "Home", new { }, null)

            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
